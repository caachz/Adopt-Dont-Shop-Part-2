<h1> Edit Review </h1>

<%= form_tag "/reviews/#{@review.id}", method: :patch do %><br><br>

  <%= label_tag :title %><br>
  <%= text_field_tag :title, "#{@review.title}" %><br>
  <%= label_tag :rating %><br>
  <%= text_field_tag :rating , "#{@review.rating}"%><br>
  <%= label_tag :content %><br>
  <%= text_field_tag :content, "#{@review.content}" %><br>
  <%= label_tag :picture %><br>
  <%= text_field_tag :picture , "#{@review.picture}"%><br>
  <%= submit_tag 'Update Review' %><br>
<% end %>
